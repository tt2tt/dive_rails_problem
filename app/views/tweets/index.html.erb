<div class="container">
  <div class="row">
    <p><%= notice %></p>
    <h1>Tweet一覧</h1>
    <table>
      <tr>
        <th>Tweet</th>
      </tr>
      <% @tweets.each do |tweet| %>
        <tr>
          <td><%= tweet.content %></td>
          <td><%= link_to 'Tweetを編集する', edit_tweet_path(tweet.id) %></td>
          <td><%= link_to 'Tweetを削除する', tweet_path(tweet.id),method: :delete, data: {confirm: '本当に削除していいですか？'} %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>