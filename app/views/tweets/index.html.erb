<div class="container-fluid">
  <div class="row">
    
    <%= render 'side' %>
    
    <div class="middle col-md-4">
      <p><%= notice %></p>
      <h1>Tweet一覧</h1>
      <table>
        <tr>
          <th>Tweet</th>
        </tr>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= tweet.content %></td>
            <td><%= link_to 'Tweetを編集する', edit_tweet_path(tweet.id) %></td>
            <td><%= link_to 'Tweetを削除する', tweet_path(tweet.id),method: :delete, data: {confirm: '本当に削除していいですか？'} %></td>
          </tr>
        <% end %>
      </table>
      <br>
      <%= link_to 'Tweetを投稿する', new_tweet_path %>
    </div>
    
    <%= render 'side' %>
    
  </div>
</div>