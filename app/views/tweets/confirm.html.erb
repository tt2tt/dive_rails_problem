<div class="container">
  <div class="row">
    <%= render 'side' %>
    <div class="middle col-md-4">
      <h3>以下の内容で送信する</h3>
    
      <%= form_with(model: @tweet, url: tweets_path, local: true) do |form| %>
        <%= form.hidden_field :content %>
        <p><%= @tweet.content %></p>
        <%= form.submit "投稿する" %> 
      <% end %>
      
      <%= form_with(model: @tweet, url: new_tweet_path, local: true, method: 'get') do |form| %>
        <%= form.hidden_field :content %>
        <%= form.submit "戻る", name: 'back'  %>
      <% end %>
    </div>
    <%= render 'side' %>
  </div>
</div>