<% page = "Tweetを編集する" %>

<div class="container">
  <div class="row">
    <h1><%= page %></h1>
    <%= form_with(model: @tweet, local: true) do |form|%>
      <div class="tweet">
        <p><%= form.label :Tweet %></p>
        <p><%= form.text_field :content %></p>
      </div>
      <%= form.submit %>
    <% end %>
  </div>
</div>
